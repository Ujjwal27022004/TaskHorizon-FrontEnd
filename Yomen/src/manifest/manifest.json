{
  "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.13/MicrosoftTeams.schema.json",
  "manifestVersion": "1.13",
  "id": "{{APPLICATION_ID}}",
  "version": "{{VERSION}}",
  "packageName": "{{PACKAGE_NAME}}",
  "developer": {
    "name": "Team Horizon",
    "websiteUrl": "https://{{PUBLIC_HOSTNAME}}",
    "privacyUrl": "https://{{PUBLIC_HOSTNAME}}/privacy.html",
    "termsOfUseUrl": "https://{{PUBLIC_HOSTNAME}}/tou.html"
  },
  "name": {
    "short": "Jira",
    "full": "Jira"
  },
  "description": {
    "short": "TODO: add short description here",
    "full": "TODO: add full description here"
  },
  "icons": {
    "outline": "icon-outline.png",
    "color": "icon-color.png"
  },
  "accentColor": "#D85028",
  "configurableTabs": [],
  "staticTabs": [
    {
      "entityId": "index",
      "name": "Home",
      "contentUrl": "${{TAB_ENDPOINT}}/index.html#/tab",
      "websiteUrl": "${{TAB_ENDPOINT}}/index.html#/tab",
      "scopes": ["personal", "groupChat", "team"]
  },
  {
      "entityId": "testBot",
      "name": "Test Bot",
      "contentUrl": "${{TAB_ENDPOINT}}/index.html#/test-bot",
      "websiteUrl": "${{TAB_ENDPOINT}}/index.html#/test-bot",
      "scopes": ["personal", "groupChat", "team"]
  }
  ],
  "bots": [],
  "connectors": [],
  "composeExtensions": [],
  "permissions": [
    "identity",
    "messageTeamMembers"
  ],
  "validDomains": [
    "{{PUBLIC_HOSTNAME}}"
  ],
  "showLoadingIndicator": false
}
